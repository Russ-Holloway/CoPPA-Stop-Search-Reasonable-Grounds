{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
            {
                "name": "deploymentInfo",
                "type": "Microsoft.Common.InfoBox",
                "visible": true,
                "options": {
                    "icon": "Info",
                    "text": "**CoPPA Deployment for UK Police Forces**\n\nThis deployment automatically creates PDS-compliant resource names. Your resource group should follow the pattern: rg-{forceCode}-prod-01 (e.g., 'rg-btp-prod-01').\n\nAll resources will be automatically named according to Police Digital Service standards."
                }
            },
            {
                "name": "resourceNamingInfo",
                "type": "Microsoft.Common.InfoBox", 
                "visible": true,
                "options": {
                    "icon": "None",
                    "text": "**Automatic Resource Naming Examples:**\n• App Service: app-{forceCode}-prod-01\n• Storage Account: st{forceCode}prod01\n• Search Service: srch-{forceCode}-prod-01\n• OpenAI Service: cog-{forceCode}-prod-01\n\nNo manual naming required!"
                }
            }
        ],
        "steps": [
            {
                "name": "azureOpenAIConfig",
                "label": "Azure OpenAI Configuration",
                "elements": [
                    {
                        "name": "azureOpenAIConfigInfo",
                        "type": "Microsoft.Common.InfoBox",
                        "visible": true,
                        "options": {
                            "icon": "Info",
                            "text": "Configure your Azure OpenAI models. These will be deployed with PDS-compliant names automatically."
                        }
                    },
                    {
                        "name": "azureOpenAIModelName",
                        "type": "Microsoft.Common.DropDown",
                        "label": "OpenAI Chat Model",
                        "placeholder": "Select a chat model",
                        "defaultValue": "gpt-4o",
                        "toolTip": "The OpenAI model to use for chat responses",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "GPT-4o (Recommended)",
                                    "value": "gpt-4o"
                                },
                                {
                                    "label": "GPT-4o Mini",
                                    "value": "gpt-4o-mini"
                                },
                                {
                                    "label": "GPT-4 Turbo",
                                    "value": "gpt-4"
                                },
                                {
                                    "label": "GPT-3.5 Turbo",
                                    "value": "gpt-35-turbo"
                                }
                            ],
                            "required": true
                        },
                        "visible": true
                    },
                    {
                        "name": "azureOpenAIEmbeddingName", 
                        "type": "Microsoft.Common.DropDown",
                        "label": "OpenAI Embedding Model",
                        "placeholder": "Select an embedding model",
                        "defaultValue": "text-embedding-ada-002",
                        "toolTip": "The OpenAI model to use for text embeddings and search",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "Text Embedding Ada 002 (Recommended)",
                                    "value": "text-embedding-ada-002"
                                },
                                {
                                    "label": "Text Embedding 3 Small",
                                    "value": "text-embedding-3-small"
                                },
                                {
                                    "label": "Text Embedding 3 Large", 
                                    "value": "text-embedding-3-large"
                                }
                            ],
                            "required": true
                        },
                        "visible": true
                    }
                ]
            }
        ],
        "outputs": {
            "ForceCode": "[take(toLower(replace(replace(resourceGroup().name, 'rg-', ''), '-prod-01', '')), 3)]",
            "EnvironmentSuffix": "prod",
            "InstanceNumber": "01",
            "ResourceGroupName": "[resourceGroup().name]",
            "AzureOpenAIModelName": "[steps('azureOpenAIConfig').azureOpenAIModelName]",
            "AzureOpenAIEmbeddingName": "[steps('azureOpenAIConfig').azureOpenAIEmbeddingName]",
            "SearchDataSourceName": "[concat(take(toLower(replace(replace(resourceGroup().name, 'rg-', ''), '-prod-01', '')), 3), '-search-ds-prod-01')]",
            "SearchIndexName": "[concat(take(toLower(replace(replace(resourceGroup().name, 'rg-', ''), '-prod-01', '')), 3), '-search-idx-prod-01')]",
            "SearchIndexerName": "[concat(take(toLower(replace(replace(resourceGroup().name, 'rg-', ''), '-prod-01', '')), 3), '-search-idxr-prod-01')]"
        }
    }
}
