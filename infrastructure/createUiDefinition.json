{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "config": {
            "basics": {
                "description": "Deploy the Policing Assistant solution with automatic PDS-compliant naming. IMPORTANT: Ensure your resource group follows the naming format 'rg-{ForceCode}-uks-prod-ai-coppa-stop-search' where {ForceCode} is your 3-letter police force code.",
                "location": {
                    "visible": true,
                    "allowedValues": [
                        "uksouth",
                        "ukwest",
                        "westeurope",
                        "northeurope"
                    ]
                }
            }
        },
        "basics": [
            {
                "name": "resourceGroupInfo",
                "type": "Microsoft.Common.InfoBox",
                "visible": true,
                "options": {
                    "icon": "Warning",
                    "text": "‚ö†Ô∏è IMPORTANT: Your resource group name must follow the format 'rg-{ForceCode}-uks-prod-ai-coppa-stop-search' where {ForceCode} is your 3-letter police force code (e.g., 'btp', 'met', 'wmp'). The force code will be automatically extracted from position 2 of your resource group name."
                }
            },
            {
                "name": "namingInfo",
                "type": "Microsoft.Common.InfoBox",
                "visible": true,
                "options": {
                    "icon": "Info",
                    "text": "‚úÖ All Azure resources will be automatically named with PDS-compliant conventions using your force code. Instance number '02' will be used to avoid conflicts with existing deployments."
                }
            }
        ],
        "steps": [
            {
                "name": "aiConfiguration",
                "label": "AI Configuration",
                "elements": [
                    {
                        "name": "aiInfo",
                        "type": "Microsoft.Common.InfoBox",
                        "visible": true,
                        "options": {
                            "icon": "Info",
                            "text": "Configure the AI models for your deployment. These settings control which Azure OpenAI models will be deployed."
                        }
                    },
                    {
                        "name": "aiModels",
                        "type": "Microsoft.Common.Section",
                        "label": "Azure OpenAI Models",
                        "elements": [
                            {
                                "name": "azureOpenAIModelName",
                                "type": "Microsoft.Common.DropDown",
                                "label": "OpenAI Chat Model",
                                "defaultValue": "gpt-4o",
                                "toolTip": "Select the Azure OpenAI chat model to deploy",
                                "constraints": {
                                    "allowedValues": [
                                        {
                                            "label": "GPT-4o (Recommended)",
                                            "value": "gpt-4o"
                                        },
                                        {
                                            "label": "GPT-4o mini",
                                            "value": "gpt-4o-mini"
                                        },
                                        {
                                            "label": "GPT-4 Turbo",
                                            "value": "gpt-4"
                                        },
                                        {
                                            "label": "GPT-3.5 Turbo",
                                            "value": "gpt-35-turbo"
                                        }
                                    ],
                                    "required": true
                                },
                                "visible": true
                            },
                            {
                                "name": "azureOpenAIEmbeddingName",
                                "type": "Microsoft.Common.DropDown",
                                "label": "Embedding Model",
                                "defaultValue": "text-embedding-ada-002",
                                "toolTip": "Select the Azure OpenAI embedding model for document processing",
                                "constraints": {
                                    "allowedValues": [
                                        {
                                            "label": "text-embedding-ada-002 (Recommended)",
                                            "value": "text-embedding-ada-002"
                                        },
                                        {
                                            "label": "text-embedding-3-small",
                                            "value": "text-embedding-3-small"
                                        },
                                        {
                                            "label": "text-embedding-3-large",
                                            "value": "text-embedding-3-large"
                                        }
                                    ],
                                    "required": true
                                },
                                "visible": true
                            }
                        ],
                        "visible": true
                    }
                ]
            },
            {
                "name": "reviewAndCreate",
                "label": "Review + Create",
                "elements": [
                    {
                        "name": "authInfo",
                        "type": "Microsoft.Common.InfoBox",
                        "visible": true,
                        "options": {
                            "icon": "Info",
                            "text": "üîê NEW: Authentication is now configured POST-DEPLOYMENT! No client secrets needed during deployment. After deployment completes, run './configure-auth.sh' (Linux/macOS) or '.\\configure-auth.ps1' (Windows) to set up authentication automatically.",
                            "uri": "https://github.com/Russ-Holloway/CoPPA-Stop-Search-Reasonable-Grounds/blob/main/POST_DEPLOYMENT_AUTH_SETUP.md"
                        }
                    },
                    {
                        "name": "deploymentSummary",
                        "type": "Microsoft.Common.InfoBox",
                        "visible": true,
                        "options": {
                            "icon": "Info",
                            "text": "‚úÖ Ready to deploy! Your resources will be created with PDS-compliant names automatically generated from your resource group name format 'rg-{ForceCode}-uks-prod-ai-coppa-stop-search'. Instance number '02' will be used to avoid naming conflicts."
                        }
                    }
                ]
            }
        ],
        "outputs": {
            "AzureOpenAIModelName": "[steps('aiConfiguration').aiModels.azureOpenAIModelName]",
            "AzureOpenAIEmbeddingName": "[steps('aiConfiguration').aiModels.azureOpenAIEmbeddingName]"
        }
    }
}
