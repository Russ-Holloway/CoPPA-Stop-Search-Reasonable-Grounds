{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [],
        "steps": [
            {
                "name": "deployment",
                "label": "Deployment Settings",
                "elements": [
                    {
                        "name": "infoBox",
                        "type": "Microsoft.Common.InfoBox",
                        "visible": true,
                        "options": {
                            "icon": "Info",
                            "text": "ðŸš€ New: Authentication is now configured POST-DEPLOYMENT! No client secrets needed during deployment. After deployment completes, run './configure-auth.sh' or '.\\configure-auth.ps1' to set up authentication automatically.",
                            "uri": "https://github.com/Russ-Holloway/CoPPA-Stop-Search-Reasonable-Grounds/blob/main/POST_DEPLOYMENT_AUTH_SETUP.md"
                        }
                    },
                    {
                        "name": "azureOpenAiModelName", 
                        "type": "Microsoft.Common.DropDown",
                        "label": "Azure OpenAI Chat Model",
                        "defaultValue": "gpt-4o",
                        "toolTip": "Select the OpenAI model for chat functionality",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "gpt-4o",
                                    "value": "gpt-4o"
                                },
                                {
                                    "label": "gpt-4o-mini", 
                                    "value": "gpt-4o-mini"
                                },
                                {
                                    "label": "gpt-35-turbo-16k",
                                    "value": "gpt-35-turbo-16k"
                                },
                                {
                                    "label": "gpt-4-turbo",
                                    "value": "gpt-4-turbo"
                                }
                            ]
                        },
                        "visible": true
                    },
                    {
                        "name": "azureOpenAiEmbeddingName",
                        "type": "Microsoft.Common.DropDown", 
                        "label": "Azure OpenAI Embedding Model",
                        "defaultValue": "text-embedding-ada-002",
                        "toolTip": "Select the OpenAI embedding model",
                        "constraints": {
                            "allowedValues": [
                                {
                                    "label": "text-embedding-ada-002",
                                    "value": "text-embedding-ada-002"
                                },
                                {
                                    "label": "text-embedding-3-small",
                                    "value": "text-embedding-3-small"
                                },
                                {
                                    "label": "text-embedding-3-large", 
                                    "value": "text-embedding-3-large"
                                }
                            ]
                        },
                        "visible": true
                    }
                ]
            }
        ],
        "outputs": {
            "AzureOpenAIModelName": "[steps('deployment').azureOpenAiModelName]",
            "AzureOpenAIEmbeddingName": "[steps('deployment').azureOpenAiEmbeddingName]",
            "AuthClientSecret": ""
        }
    }
}
